<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_story_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imagevi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/album_cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagevi"
                android:paddingLeft="@dimen/story_title_padding"
                android:paddingRight="@dimen/story_title_padding"
                android:paddingTop="@dimen/story_title_padding"
                android:textColor="@color/album_title"
                android:textSize="@dimen/story_title" />

            <TextView
                android:id="@+id/published"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:paddingBottom="@dimen/published_padding_bottom"
                android:paddingLeft="@dimen/story_title_padding"
                android:paddingRight="@dimen/story_title_padding"
                android:textSize="@dimen/published" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>